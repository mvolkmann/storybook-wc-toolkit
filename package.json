{
  "name": "storybook-wc-toolkit",
  "version": "1.0.0",
  "description": "This project demonstrates the use of Storybook and wc-toolkit with a vanilla web component.",
  "author": "R. Mark Volkmann (r.mark.volkmann@gmail.com)",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "web components",
    "Storybook",
    "wc-toolkit"
  ],
  "customElements": "custom-elements.json",
  "scripts": {
    "build-storybook": "storybook build",
    "cem": "custom-elements-manifest analyze",
    "cem:watch": "custom-elements-manifest analyze --watch",
    "deploy-storybook": "gh-pages -d storybook-static",
    "dev": "vite",
    "lint": "oxlint",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/web-components-vite": "^10.1.11",
    "@vitest/browser": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@wc-toolkit/storybook-helpers": "^10.0.0",
    "chromatic": "^13.1.3",
    "gh-pages": "^6.3.0",
    "lit": "^3.3.1",
    "playwright": "^1.55.0",
    "storybook": "^10.1.11",
    "storybook-addon-test-codegen": "^3.0.1",
    "vite": "^7.1.3",
    "vitest": "^4.0.16"
  }
}
